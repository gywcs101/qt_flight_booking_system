}

/* 输入框样式 */
QLineEdit {
    border: 1px solid #DCDFE6;
    border-radius: 4px;
    padding: 0 10px; /* 文字内边距 */
    font-size: 14px;
    color: #333;
    background-color: white;
}

QLineEdit:focus {
    border: 1px solid #0078D7; /* 选中时变蓝 */
}

