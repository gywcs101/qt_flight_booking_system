    font-weight: bold;
    border-radius: 4px;
    border: none;
}

QPushButton#btnSearch:hover {
    background-color: #005A9E; /* 悬停深蓝 */
}

QPushButton#btnSearch:pressed {
    background-color: #004C85;
}

/* ==================== 
   2. 滚动区域样式 
   ==================== */
QScrollArea {
    background-color: #F5F7FA; /* 整体背景淡灰 */
    border: none;
}

/* 滚动条内部容器 */
QWidget#scrollAreaWidgetContents {
    background-color: #F5F7FA; /* 确保里面也是淡灰 */
}

/* 滚动条美化 (可选，去掉就是系统默认) */
QScrollBar:vertical {
    border: none;
    background: #F5F7FA;
    width: 8px;
    margin: 0px;
}
QScrollBar::handle:vertical {
    background: #C0C4CC;
    border-radius: 4px;
    min-height: 20px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}</string>
